<div class="content_title"><%= t('views.users') %></div>
<div class="content_box">
  <% @users.each do |user| %>
      <div class="content_row">
        <%= link_to user_path(user) do %>
            <div class="content_box_child">
              <div>
                <%= user.name %>
              </div>
              <div>
                <%= user.steam_id %>
              </div>
            </div>
        <% end %>
      </div>
  <% end %>
</div>